<div class="card text-center">
  <div class="card-header row">
    <div class="col-8">
      <ul class="nav nav-tabs card-header-tabs">
        <li class="nav-item">
          <a class="nav-link active" href="/teamManager">Manage Teams</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/playerManager">Manage Players</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/gameManager">Manage Games</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/gamePicker">Select Game</a>
        </li>
      </ul>
    </div>
    <div class="offset-1 col-2"><a href="/"> <button type="button" class="btn btn-dark">HOME</button></a>
    </div>
  </div>
</div>

<div id="home" style="margin: 15px">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">

        <h2>Manage Teams Page</h2>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="team-name">Team Name</label>
            <input type="text" id="team-name" class="form-control" aria-describedby="team-name"
              placeholder="Enter Team Name">
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
        <h3>Teams:</h3>
        <ul id="team-list" class="list-group">
          {{#each teams}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="api/teams/{{this.id}}">{{this.text}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
