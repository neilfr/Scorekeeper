<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        {{!-- <h1>{{msg}}</h1> --}}
        <h2>This is our Team Manager Page!</h2>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="team-name">Team Name</label>
            <input type="text" id="team-name" class="form-control" aria-describedby="team-name"
              placeholder="Enter Team Name">
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
        <h3>Teams:</h3>
        <ul id="team-list" class="list-group">
          {{#each teams}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="api/teams/{{this.id}}">{{this.text}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

